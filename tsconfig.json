{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./backend",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["backend/src/*"]
    }
  },
  "include": ["backend/src/**/*", "backend/tests/**/*"],
  "exclude": ["node_modules", "dist"]
}